@page
@model CBTDWeb.Pages.Products.IndexModel
@{
}
<div class="container">

    <div class="row pt=4">
        <!--Start Row-->
        <div class="col-6">
            <!--50% of row-->
            <h2 class="text-primary">
                Product List
            </h2>

        </div><!-- End 1st Column-->

        <div class="col-6 text-end">
            <!--50% row right justified-->
            <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div> <!--End 2nd Column-->
    </div> <!--End Row-->

    <table class="table table-bordered table-striped" id="DT_Products" style="width:100%">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    List Price
                </th>
                <th>
                    Category Name
                </th>
                <th>
                    Manufacturer Name
                </th>
                <th>&nbsp;</th>
            </tr>
        </thead>

        
    </table>
</div> 
@section Scripts
{
    <script src="~/js/products.js"></script>
}
