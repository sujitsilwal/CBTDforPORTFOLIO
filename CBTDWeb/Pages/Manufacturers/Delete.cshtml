@page
@model CBTDWeb.Pages.Manufacturers.DeleteModel
@{
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-danger py-2"> Delete Manufacturer</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input readonly asp-for="objManufacturer.Name" class="form-control border-0 shadow" />
                    <label asp-for="objManufacturer.Name" class="ms-2">Manufacturer Name</label>
                    <span asp-validation-for="objManufacturer.Name" class="text-danger"></span>

                </div>
               
                
                <input asp-for="objManufacturer.Id" type ="hidden"/>
                
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">
                            Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-page ="Index"class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
